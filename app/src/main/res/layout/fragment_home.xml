<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:fitsSystemWindows="true">

                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/slider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.daimajia.slider.library.Indicators.PagerIndicator
                    android:id="@+id/custom_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/slider"
                    android:gravity="center" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_below="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/title"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorPrimary"
                    android:text="2019 Fresher Welcome"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/sub_title"
                    android:layout_below="@+id/title"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/cu"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <android.support.v7.widget.CardView
                    android:layout_below="@+id/sub_title"
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="5dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/selected"
                            android:text="You Selected"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_margin="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/ktitle"
                            android:layout_below="@+id/selected"
                            android:text="King             >"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="30dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                        <TextView
                            android:id="@+id/king"
                            android:padding="5dp"
                            android:layout_below="@+id/selected"
                            android:text="King"
                            android:layout_toEndOf="@+id/ktitle"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="30dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/qtitle"
                            android:padding="5dp"
                            android:layout_below="@+id/ktitle"
                            android:text="Queen          >"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="30dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/queen"
                            android:padding="5dp"
                            android:layout_below="@+id/ktitle"
                            android:layout_toEndOf="@+id/qtitle"
                            android:text="Queen"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="30dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/vote"
                            android:layout_below="@+id/queen"
                            android:layout_margin="10dp"
                            android:text="VOte"
                            android:textColor="#fff"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/button"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp" />


                        <Button
                            android:id="@+id/clear"
                            android:layout_below="@+id/queen"
                            android:layout_margin="10dp"
                            android:text="Clear"
                            android:textColor="#fff"
                            android:layout_toLeftOf="@+id/vote"
                            android:background="@drawable/button"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp" />


                    </RelativeLayout>

                </android.support.v7.widget.CardView>


            </RelativeLayout>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>